{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": "src",
    "lib": ["es2015", "es2016", "es2017.object"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "plugins": [{ "transform": "ts-transformer-imports" }]
  },
  "files": ["src/index.ts", "src/types/index.d.ts"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
