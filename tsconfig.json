{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types", "src/types"],
    "paths": {
      "*": ["src/types/*"]
    }
  },
  "exclude": ["node_modules"]
}
